<section class="formulario">
	<h2>CONTACTANOS</h2>
	<form class="contact" action="" method="get">
		{{#each input}}
			<label for={{name}}>{{placeholder}}</label>
			<input
				type={{type}}
				name={{name}}
				id={{name}}
				placeholder={{placeholder}}
				{{required}}
			/>
		{{/each}}
		<label for="product">Bakery Selection</label>
		<select name="product" id="product">
			<option value="Opcion" selected>Como nos has conocido?</option>
			{{#each select}}
				<option value={{value}}>{{name}}</option>
			{{/each}}
		</select>
		<label for="message">Mensaje</label>
		<textarea name="message" id="message" placeholder="Mensaje" required></textarea>
		<input class="btn" type="submit" value="Send" />
	</form>
</section>